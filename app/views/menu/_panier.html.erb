<div class="panier-card">
  <div class="panier-header">
    🛒 Votre commande
    <span class="badge" data-panier-target="count">0</span>
  </div>
  
  <div data-panier-target="liste">
    <!-- Les articles du panier seront ajoutés ici par JavaScript -->
  </div>
  
  <div class="panier-total">
    <div class="total-amount">
      Total: <span data-panier-target="total">0.00 DT</span>
    </div>
    
    <%= form_with url: commandes_path, method: :post, 
        data: { 
          action: "submit->panier#submit" 
        }, 
        class: "panier-form" do |f| %>
      
      <%= f.hidden_field "commande[table_id]", value: 1 %>
      <%= f.hidden_field "commande[ligne_commandes_attributes]", 
          data: { panier_target: "json" } %>
      
      <%= f.submit "🍽️ Envoyer la commande", 
          class: "btn btn-success", 
          style: "width: 100%; font-size: 1.1rem; padding: 1rem;" %>
    <% end %>
  </div>
</div>
