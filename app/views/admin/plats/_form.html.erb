<%= form_with model: [:admin, @plat], local: true do |f| %>
  <div>
    <%= f.label :nom %><br>
    <%= f.text_field :nom %>
  </div>

  <div>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :prix_en_centimes, "Prix (en dinars)" %><br>
    <%= f.number_field :prix_en_centimes %>
  </div>

  <div>
    <%= f.label :type_de_plat %><br>
    <%= f.select :type_de_plat, ["Plat", "Boisson"], include_blank: "Choisir..." %>
  </div>

  <div>
    <%= f.label :photo %><br>
    <%= f.file_field :photo %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>
