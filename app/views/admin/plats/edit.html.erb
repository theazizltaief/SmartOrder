<div class="admin-header">
  <h1>✏️ Modifier le Plat</h1>
  <p>Modifier les informations de "<%= @plat.nom %>"</p>
</div>

<!-- Actions rapides -->
<div style="margin-bottom: 2rem;">
  <%= link_to "← Retour aux plats", admin_plats_path, 
      class: "btn btn-secondary" %>
  <%= link_to "👁️ Voir", admin_plat_path(@plat), 
      class: "btn btn-primary" %>
</div>

<!-- Formulaire -->
<div class="card" style="max-width: 600px;">
  <%= render 'form', plat: @plat %>
</div>
